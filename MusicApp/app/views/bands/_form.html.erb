<% action_url = @band.persisted? ? band_url(@band) : bands_url(@band) %>
<% hidden_value = @band.persisted ? :patch : :post %>


<form 
	action="<%= action_url %>" 
	method="POST">
	<input
		type="hidden"
		name="_method"
		value="<%= hidden_value %>">
	<input
		type="hidden"
		name="authenticity_token"
		value="<%= form_authenticity_token %>">

	<label for="name">Name: </label>
	<input 
		name="band[name]"
		id="name"
		type="text" 
		value="<%= @band.name %>">

	<input type="submit" value="Submit!">
</form>