<h1>New Album!</h1>
<form 
	action="<%= albums_url %>" 
	method="POST">
	<input
		type="hidden"
		name="_method"
		value="POST">
	<input
		type="hidden"
		name="authenticity_token"
		value="<%= form_authenticity_token %>">

	<label for="name">Name: </label>
	<input 
		name="band[name]"
		id="name"
		type="text" 
		value="<%= @album.name %>">

	<label for="band">Band: </label>
	<select
		name="album[band]"
		id="band"
		<option></option>
		<% @bands.each do |band| %>
			<option
				<%= @band == band ? "selected" : "" %>
				value="<%= band %>">
				<%= band.name %>
			</option>
		<% end %>
	</select>


	<input type="submit" value="Submit!">
</form>