<h1>New Band!</h1>
<form 
	action="<%= bands_url %>" 
	method="POST">
	<input
		type="hidden"
		name="_method"
		value="POST">
	<input
		type="hidden"
		name="authenticity_token"
		value="<%= form_authenticity_token %>">

	<label for="name">Name: </label>
	<input 
		name="band[name]"
		id="name"
		type="text" 
		value="<%= @band.name %>">

	<input type="submit" value="Submit!">
</form>