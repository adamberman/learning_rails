<h1>Log In!</h1>
<form 
	action="<%= session_url %>" 
	method="POST">
	<input
		type="hidden"
		name="authenticity_token"
		value="<%= form_authenticity_token %>">

	<label for="email">Email: </label>
	<input 
		name="user[email]"
		id="email"
		type="text" 
		value="<%= @user.email %>">

	<label for="password">Password: </label>
	<input 
		name="user[password]" 
		id="password" 
		type="password">

	<input type="submit" value="Log In">
</form>