<% request_type = @sub.persisted? ? 'PATCH' : 'POST' %>
<% form_action = @sub.persisted? ? sub_url(@sub) : subs_url %>
<% button_name = @sub.persisted? ? 'Apply Changes' : 'Create Sub-Blueit' %>

<form 
  action="<%= form_action %>" 
  method="POST">
  <input
    type="hidden"
    name="_method"
    value="<%= request_type %>">
  <input  
      type="hidden"
  		name="authenticity_token"
  		value="<%= form_authenticity_token %>">  

  <label for="title">Title</label>
  <input type="text"
         name="sub[title]"
         id="title"
         value="<%= @sub.title %>">
  <br>
  <br>      

  <label for="Description">Description</label>       
  <textarea name="sub[description]" id="Description"></textarea>   
  <br>
  
  <input type="submit"
         value="<%= button_name %>">  
  
</form>  